<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoosePlaylist">

    <ImageView
        android:id="@+id/playlist2"
        android:layout_width="131dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:onClick="addsongtoplaylist2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/playlist1"
        app:srcCompat="@drawable/albumcover2" />

    <ImageView
        android:id="@+id/playlist1"
        android:layout_width="131dp"
        android:layout_height="119dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="88dp"
        android:onClick="addsongtoplaylist1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/albumcover1" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="24dp"
        android:text="Choose a playlist"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/playlist1"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="28dp"
        android:text="Playlist 1"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/playlist1"
        app:layout_constraintTop_toTopOf="@+id/playlist1" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Playlist 2"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="@+id/textView3"
        app:layout_constraintTop_toTopOf="@+id/playlist2" />

</androidx.constraintlayout.widget.ConstraintLayout>